{
    "$schema": "https://opencode.ai/config.json",
    "tui": {
        "scroll_speed": 3,
        "scroll_acceleration": {
            "enabled": true
        }
    },
    "plugin": ["@tarquinen/opencode-dcp@latest"],
    "provider": {
        "openrouter": {
            "models": {
                "z-ai/glm-4.7": {
                    "options": {
                        "provider": {
                            "order": ["cerebras"],
                            "allow_fallbacks": false
                        }
                    }
                }
            }
        }
    },    
    "keybinds": {
        "sidebar_toggle": "ctrl+b",
        "session_child_cycle": "ctrl+;",
        "session_child_cycle_reverse": "ctrl+l",
        "model_list": "<leader>m",
        "agent_cycle": "ctrl+n",
        "agent_cycle_reverse": "alt+n",  
        "model_cycle_favorite": "ctrl+f",
        "model_cycle_favorite_reverse": "none",
        "model_cycle_recent": "tab",
        "model_cycle_recent_reverse": "shift+tab"
    },
    "permission": {
        "bash": {
            "*": "allow",
            "gcloud*": "ask",
            "gcloud logging*": "allow",
            "git commit*": "ask",
            "rm*": "ask",
            "docker compose*": "deny",
            "docker exec*": "ask",
            "kubectl*": "ask",
            "kubectl get*": "allow",
            "kubectl describe*": "allow",
            "kubectl logs*": "allow",
            "kubectl config view*": "allow",
        },
        "webfetch": "allow"
    }
}
