{
    "$schema": "https://opencode.ai/config.json",
    "tui": {
        "scroll_speed": 3,
        "scroll_acceleration": {
            "enabled": true
        }
    },
    "plugin": ["@tarquinen/opencode-dcp@latest"],
    "provider": {
        "openrouter": {
            "models": {
                "z-ai/glm-4.7": {
                    "options": {
                        "provider": {
                            "order": ["cerebras"],
                            "allow_fallbacks": false
                        }
                    }
                }
            }
        }
    },    
    "keybinds": {
        "sidebar_toggle": "ctrl+b",
        "session_child_cycle": "ctrl+;",
        "session_child_cycle_reverse": "ctrl+l",
        "model_list": "<leader>m",
        "agent_cycle": "ctrl+n",
        "agent_cycle_reverse": "none",  
        "model_cycle_favorite": "tab",
        "model_cycle_favorite_reverse": "shift+tab",
        "model_cycle_recent": "ctrl+m",
        "model_cycle_recent_reverse": "ctrl+shift+m"
    },
    "permission": {
        "bash": {
            "gh issue list": "allow",
            "gh issue view": "allow",
            "gh pr view": "allow",
            "gh pr create": "allow",
            "gh pr merge": "allow",
            "gh pr list": "allow",
            "git diff": "allow",
            "git log": "allow",
            "git stash": "allow",
            "git pull": "allow",
            "git ls-tree": "allow",
            "git commit": "deny",
            "grep": "allow",
            "head": "allow",
            "tail": "allow",
            "jq": "allow",
            "rg": "allow",
            "ls": "allow",
            "mkdir": "allow",
            "mv": "allow",
            "rm": "allow",
            "find": "allow",
            "docker logs": "allow",
            "docker ps": "allow",
            "docker compose": "deny",
            "docker exec": "ask",
            "python": "allow",
            "elluminate": "allow",
            "uv run": "allow",
            "curl": "allow",
            "mkdocs": "allow"
        },
        "webfetch": "allow"
    }
}
